<div class="container">
    <hr />
    <h4>Add a New Widget:</h4>
    <%= form_for @widget do |f| %>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control", placeholder: "What should we call this bad boy?" %>
    </div>
    <div class="form-group">
        <%= f.label :quantity %>
        <%= f.number_field :quantity, class: "form-control" %>
    </div>
    <div class="actions"><%= f.submit "Add Widget", class: "btn btn-success" %></div>
    <% end %>
</div>